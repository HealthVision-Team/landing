---
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---
<div class="relative overflow-hidden bg-gradient-to-br from-teal to-dark-blue py-16">
  <div class="absolute inset-0 bg-grid-white/[0.05] bg-[size:20px_20px]"></div>
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex flex-col md:flex-row items-center gap-12">
      <div class="flex-1 text-white z-10">
        <h1 class="text-5xl font-bold mb-6 leading-tight">
          {title}
        </h1>
        <p class="text-xl text-blue-green mb-8">
          {description}
        </p>
        <div class="flex gap-4">
          <a href="/producto" class="bg-white text-teal px-8 py-3 rounded-lg font-semibold hover:bg-blue-green transition-colors">
            Ver Producto
          </a>
          <a href="/caracteristicas" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white/10 transition-colors">
            Caracter√≠sticas
          </a>
        </div>
      </div>
      <div class="flex-1 relative">
        <div class="absolute -inset-4 bg-gradient-to-r from-teal to-blue-green rounded-full blur-3xl opacity-30"></div>
        <img 
          src={image} 
          alt="MedVisionAR Demo"
          class="relative rounded-lg shadow-2xl transform hover:scale-105 transition-transform duration-500"
        />
      </div>
    </div>
  </div>
</div>