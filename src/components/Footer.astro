---
const socialLinks = [
  { platform: 'Facebook', href: 'https://www.facebook.com/profile.php?id=61568290036326', iconClass: 'fa-brands fa-facebook-f' },
  { platform: 'Twitter', href: 'https://www.twitter.com/medvisionar', iconClass: 'fa-brands fa-twitter' },
  { platform: 'Instagram', href: 'https://www.instagram.com/medvisionar?igsh=MXE5dnpiYTc0b3E4bw==', iconClass: 'fa-brands fa-instagram' },
  { platform: 'YouTube', href: 'https://www.youtube.com/@MedVisionAR', iconClass: 'fa-brands fa-youtube' }
];

---
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<footer class="bg-grey-3 py-6 mt-auto">
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex flex-col md:flex-row md:justify-between items-center gap-6">
      <div class="text-sm text-grey text-center md:text-left">
        <p>Lunes a viernes de 9:00 a 17:00</p>
        <p>(01) 555 5555</p>
        <p>contacto@medvision.com</p>
      </div>
      <div class="flex gap-4 flex-wrap justify-center">
        {socialLinks.map(link => (
          <a href={link.href} target="_blank" class="text-grey hover:text-teal transition-colors">
            <i class={link.iconClass} style={{ fontSize: '1.5rem' }}></i>
            <span class="sr-only">{link.platform}</span>
          </a>
        ))}
      </div>
      <img src="/logo.svg" alt="MedVisionAR" class="h-8" />
    </div>
  </div>
</footer>

